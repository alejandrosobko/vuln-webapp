<h1>Crear cuenta</h1>

<%= form_tag users_path do |form| %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :pass %>
    <%= password_field_tag :pass %>
  </div>

  <div class="actions">
    <%= submit_tag "Crear" %>
  </div>
<% end %>